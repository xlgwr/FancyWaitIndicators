                <Style.Triggers>
                    <Trigger Property="Fill" Value="Green">
                        <Trigger.EnterActions>
                            <BeginStoryboard x:Name="bsb">
                                <Storyboard FillBehavior="Stop" BeginTime="00:00:00.6" RepeatBehavior="Forever">
